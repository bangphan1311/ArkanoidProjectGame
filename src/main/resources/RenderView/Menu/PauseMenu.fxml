<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pausePane" xmlns:fx="http://javafx.com/fxml" fx:controller="GameManager.UI.PauseMenuController"
            prefWidth="400" prefHeight="300" style="-fx-background-color: rgba(0,0,0,0.7); -fx-background-radius: 20;">
    <children>
        <Button fx:id="homeButton" text="Home" layoutX="150" layoutY="40" prefWidth="100" style="-fx-font-size: 16;" />
        <Button fx:id="resumeButton" text="Tiếp tục" layoutX="150" layoutY="90" prefWidth="100" style="-fx-font-size: 16;" />
        <Button fx:id="restartButton" text="Chơi lại" layoutX="150" layoutY="140" prefWidth="100" style="-fx-font-size: 16;" />
        <Button fx:id="previousButton" text="Previous" layoutX="150" layoutY="190" prefWidth="100" style="-fx-font-size: 16;" />
        <Button fx:id="nextButton" text="Next" layoutX="150" layoutY="240" prefWidth="100" style="-fx-font-size: 16;" />
    </children>
</AnchorPane>
