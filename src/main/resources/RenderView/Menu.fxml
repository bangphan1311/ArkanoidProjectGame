<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600" prefWidth="800"
            stylesheets="@Menu.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GameManager.MenuController">
    <children>
        <Label layoutX="350.0" layoutY="-13.0" prefHeight="146.0" prefWidth="332.0" text=" GAME " textFill="#2f3f73">
            <font>
                <Font name="Snap ITC" size="64.0" />
            </font>
        </Label>
        <Label layoutX="297.0" layoutY="113.0" text="ARKANOID" textFill="#2f3f73">
            <font>
                <Font name="Snap ITC" size="64.0" />
            </font>
        </Label>
        <Button fx:id="startButton" layoutX="43.0" layoutY="263.0" mnemonicParsing="false"
                prefHeight="53.0" prefWidth="279.0"
                text="Start Game" textAlignment="CENTER" textFill="#39385e"
                onAction="#handleStartGame">
            <font>
                <Font name="Eras Bold ITC" size="28.0" />
            </font>
        </Button>
        <Button fx:id="exitButton" layoutX="462.0" layoutY="464.0" mnemonicParsing="false"
                prefHeight="53.0" prefWidth="279.0"
                text="Exit" textAlignment="CENTER"
                onAction="#handleExit">
            <font>
                <Font name="Eras Bold ITC" size="28.0" />
            </font>
        </Button>
        <Button fx:id="instructionsButton" layoutX="462.0" layoutY="263.0" mnemonicParsing="false"
                prefHeight="53.0" prefWidth="279.0"
                text="Instructions" textAlignment="CENTER"
                onAction="#handleInstructions">
            <font>
                <Font name="Eras Bold ITC" size="28.0" />
            </font>
        </Button>
        <Button fx:id="highScoresButton" layoutX="251.0" layoutY="367.0" mnemonicParsing="false"
                prefHeight="53.0" prefWidth="279.0"
                text="High Scores" textAlignment="CENTER"
                onAction="#handleHighScores">
            <font>
                <Font name="Eras Bold ITC" size="28.0" />
            </font>
        </Button>
        <Button fx:id="settingsButton" layoutX="43.0" layoutY="464.0" mnemonicParsing="false"
                prefHeight="53.0" prefWidth="279.0"
                text="Settings" textAlignment="CENTER"
                onAction="#handleSettings">
            <font>
                <Font name="Eras Bold ITC" size="28.0" />
            </font>
        </Button>
    </children>
</AnchorPane>