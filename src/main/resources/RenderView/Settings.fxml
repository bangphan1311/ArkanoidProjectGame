<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GameManager.SettingsController"
            prefHeight="600" prefWidth="800"
            style="-fx-background-image: url('/Images/backgroundsettings.png');
                   -fx-background-size: cover;
                   -fx-background-position: center center;">

    <Button fx:id="backButton"
            layoutX="127.0" layoutY="465.0"
            onAction="#handleBackToMenu"
            text="Back to Menu"
            style="-fx-background-color: linear-gradient(to bottom, #74b9ff, #0984e3);
                   -fx-text-fill: white;
                   -fx-font-size: 16px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 30;
                   -fx-pref-width: 180;
                   -fx-pref-height: 50;
                   -fx-cursor: hand;
                   -fx-alignment: CENTER_LEFT;
                   -fx-padding: 0 0 0 35;
                   -fx-border-color: transparent;
                   -fx-focus-color: transparent;
                   -fx-faint-focus-color: transparent;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0.3, 0, 2);" />

    <ToggleButton fx:id="soundToggle"
                  layoutX="262.0" layoutY="320.0"
                  text="OFF"
                  style="-fx-font-size: 16px;
                         -fx-background-color: #F44336;
                         -fx-text-fill: white;
                         -fx-background-radius: 25;
                         -fx-pref-width: 120;
                         -fx-pref-height: 40;
                         -fx-cursor: hand;
                         -fx-font-weight: bold;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 0, 2);" />

    <ToggleButton fx:id="musicToggle"
                  layoutX="262.0" layoutY="121.0"
                  text="OFF"
                  style="-fx-font-size: 16px;
                         -fx-background-color: #F44336;
                         -fx-text-fill: white;
                         -fx-background-radius: 25;
                         -fx-pref-width: 120;
                         -fx-pref-height: 40;
                         -fx-cursor: hand;
                         -fx-font-weight: bold;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 0, 2);" />

    <Label layoutX="117.0" layoutY="123.0" text="MUSIC:">
        <font>
            <Font name="Eras Bold ITC" size="30.0" />
        </font>
    </Label>

    <Label layoutX="117.0" layoutY="322.0" text="SOUND:">
        <font>
            <Font name="Eras Bold ITC" size="30.0" />
        </font>
    </Label>

</AnchorPane>
