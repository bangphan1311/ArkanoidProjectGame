<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="pauseMenuPane" visible="false"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: rgba(0,0,0,0.5);"
            xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <Button fx:id="menuBtn" text="Menu" layoutX="350" layoutY="200"/>
        <Button fx:id="resumeBtn" text="Tiếp tục" layoutX="350" layoutY="260"/>
        <Button fx:id="replayBtn" text="Chơi lại" layoutX="350" layoutY="320"/>
        <Button fx:id="nextBtn" text="Next" layoutX="350" layoutY="380"/>
        <Button fx:id="previousBtn" text="Previous" layoutX="350" layoutY="440"/>
    </children>
</AnchorPane>
