<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GameManager.GameController">

    <children>
        <Pane fx:id="gamePane" prefHeight="600.0" prefWidth="800.0">
            <children>

                <!-- Paddle -->
                <Rectangle fx:id="paddleRect" arcHeight="5.0" arcWidth="5.0"
                           fill="#0b79e04f" height="22.0"
                           layoutX="336.0" layoutY="560.0"
                           stroke="BLACK" strokeType="INSIDE" width="128.0" />

                <!-- Ball -->
                <Circle fx:id="ballCircle" centerX="400.0" centerY="350.0"
                        fill="#eb7752eb" radius="12.0" />

                <!-- Brick  -->
                <Pane fx:id="brickPane" layoutX="0.0" layoutY="20.0"
                      prefHeight="280.0" prefWidth="800.0">
                    <children>
                        <!-- demo -->
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#1fff8d8a"
                                   height="28.0" stroke="BLACK" strokeType="INSIDE"
                                   width="72.0" />
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#1fff8d8a"
                                   height="28.0" layoutX="72.0" stroke="BLACK"
                                   strokeType="INSIDE" width="72.0" />
                    </children>
                </Pane>

            </children>
        </Pane>
    </children>
</AnchorPane>
