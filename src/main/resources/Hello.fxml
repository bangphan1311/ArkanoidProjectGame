<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="690.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <!-- Khu vực chơi game -->
        <Pane fx:id="gamePane" prefHeight="690.0" prefWidth="600.0">
            <children>
                <!-- Thanh Paddle -->
                <Rectangle fx:id="Paddle" arcHeight="5.0" arcWidth="5.0"
                           fill="#0b79e04f" height="22.0" layoutX="231.0"
                           layoutY="654.0" stroke="BLACK" strokeType="INSIDE"
                           width="102.0" />

                <!-- Quả Ball -->
                <Circle fx:id="Ball" centerX="300.0" centerY="400.0"
                        radius="10.0" fill="#ff6347" />
            </children>
        </Pane>
    </children>
</AnchorPane>
