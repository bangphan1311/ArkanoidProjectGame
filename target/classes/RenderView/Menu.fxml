<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane
        prefHeight="600"
        prefWidth="800"
        stylesheets="@Menu.css"
        xmlns="http://javafx.com/javafx/25"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="GameManager.MenuController">

    <children>

        <!-- Tiêu đề chính -->
        <Label
                layoutX="352.0"
                layoutY="-24.0"
                prefHeight="146.0"
                prefWidth="332.0"
                text="GAME"
                textFill="#2f3f73">
            <font>
                <Font name="Snap ITC" size="64.0"/>
            </font>
        </Label>

        <Label
                layoutX="294.0"
                layoutY="80.0"
                text="ARKANOID"
                textFill="#2f3f73">
            <font>
                <Font name="Snap ITC" size="64.0"/>
            </font>
        </Label>

        <!-- Start Game -->
        <Button
                fx:id="startButton"
                layoutX="279.0"
                layoutY="244.0"
                mnemonicParsing="false"
                onAction="#handleStartGame"
                prefHeight="193.0"
                prefWidth="197.0"
                text="Start Game">
            <font>
                <Font name="Eras Bold ITC" size="25.0"/>
            </font>
            <padding>
                <Insets bottom="-75.0" right="10.0"/>
            </padding>
        </Button>

        <!-- Exit -->
        <Button
                fx:id="exitButton"
                layoutX="68.0"
                layoutY="364.0"
                mnemonicParsing="false"
                onAction="#handleExit"
                prefHeight="193.0"
                prefWidth="198.0"
                text="Exit"
                textAlignment="CENTER">
            <font>
                <Font name="Eras Bold ITC" size="15.0"/>
            </font>
            <padding>
                <Insets bottom="-75.0" right="10.0"/>
            </padding>
        </Button>

        <!-- Instructions -->
        <Button
                fx:id="instructionsButton"
                layoutX="500.0"
                layoutY="162.0"
                mnemonicParsing="false"
                onAction="#handleInstructions"
                prefHeight="193.0"
                prefWidth="197.0"
                text="Instructions"
                textAlignment="CENTER">
            <font>
                <Font name="Eras Bold ITC" size="28.0"/>
            </font>
            <padding>
                <Insets bottom="-70.0" right="10.0"/>
            </padding>
        </Button>

        <!-- High Scores -->
        <Button
                fx:id="highScoresButton"
                layoutX="68.0"
                layoutY="160.0"
                mnemonicParsing="false"
                onAction="#handleHighScores"
                prefHeight="193.0"
                prefWidth="197.0"
                text="High Scores"
                textAlignment="CENTER">
            <font>
                <Font name="Eras Bold ITC" size="62.0"/>
            </font>
            <padding>
                <Insets bottom="-72.0" right="10.0"/>
            </padding>
        </Button>

        <!-- Settings -->
        <Button
                fx:id="settingsButton"
                layoutX="486.0"
                layoutY="366.0"
                mnemonicParsing="false"
                onAction="#handleSettings"
                prefHeight="193.0"
                prefWidth="197.0"
                text="Settings"
                textAlignment="CENTER">
            <font>
                <Font name="Eras Bold ITC" size="28.0"/>
            </font>
            <padding>
                <Insets bottom="-75.0" right="10.0"/>
            </padding>
        </Button>

    </children>
</AnchorPane>
