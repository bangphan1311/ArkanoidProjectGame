<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="GameManager.LevelCompleteController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: linear-gradient(to bottom, #222, #444);">

    <Button fx:id="nextButton"
            text="Next Level"
            style="-fx-font-size: 20px; -fx-padding: 10 40;"
            onAction="#handleNextLevel"/>
</VBox>