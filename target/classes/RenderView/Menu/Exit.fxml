            fx:controller="GameManager.Menu.ExitController">

    <!-- Background -->
    <ImageView fx:id="backgroundImage" fitHeight="300" fitWidth="400">
        <image>
            <Image url="@../../Images/Background/backgroundexit.png" />
        </image>
    </ImageView>

    <!-- TiÃªu Ä‘á» -->
